#!/usr/bin/env bash

log() {
    echo "git-sync-all: $1"
}

sync() {
    if [ -d "$1" ]; then
	log "syncing $1"
	"$HOME/bin/git-sync" -d "$1" > /dev/null
    else
	log "$1 doesn't exist, skipping"
    fi
}

DIRS="$(cat <<EOF
$HOME/.emacs.d
$HOME/Documents
$HOME/docs
$HOME/src/blog 
$HOME/src/dotfiles
EOF
)"

for dir in $DIRS; do
    sync "$dir"
done
